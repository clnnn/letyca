{
  "name": "contracts",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "contracts/src",
  "prefix": "le",
  "tags": [],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "contracts/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["contracts/**/*.ts", "contracts/**/*.html"]
      }
    }
  }
}
